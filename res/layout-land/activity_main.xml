<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
    	android:id="@+id/scientistName"
    	android:text="@string/alan_turing_full_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="20sp"
    	android:textStyle="bold"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="10dp"
    	/>
    
      <ImageView
        android:id="@+id/scientistPortrait"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/alan_turing"
        android:contentDescription="@string/alan_turing_photo_desc"
        android:layout_below="@id/scientistName"
        android:layout_margin="10dp"
         />
    


      <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/scientistPortrait"
         android:layout_below="@id/scientistName"
         android:layout_marginTop="8dp"
         android:layout_marginRight="20dp">
	    <TextView
	        android:id="@+id/scientistBio"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        
	        android:text="@string/alan_turing_bio"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        />
    </ScrollView>
    

</RelativeLayout>
